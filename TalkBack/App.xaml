<?xml version="1.0" encoding="UTF-8"?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TalkBack"
             xmlns:converters="clr-namespace:TalkBack.Converters"
             x:Class="TalkBack.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!-- Converters -->
            <converters:IsNotNullConverter x:Key="IsNotNullConverter" />
            <converters:PlayPauseIconConverter x:Key="PlayPauseIconConverter" />
            <converters:PlayPauseImageConverter x:Key="PlayPauseImageConverter" />
            <converters:TranscriptionStatusConverter x:Key="TranscriptionStatusConverter" />
            <converters:TranscriptionColorConverter x:Key="TranscriptionColorConverter" />
            <converters:TranscribeButtonIconConverter x:Key="TranscribeButtonIconConverter" />
            <converters:TranscribeImageConverter x:Key="TranscribeImageConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>