<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:TalkBack.ViewModels"
             xmlns:models="clr-namespace:TalkBack.Models"
             x:Class="TalkBack.Views.RecordingsPage"
             x:DataType="viewModel:RecordingsPageViewModel"
             Title="Recordings">
    <Grid RowDefinitions="Auto,Auto,*">
        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="3"
              IsVisible="{Binding IsTranscribing}"
              BackgroundColor="#80000000"
              ZIndex="1000">
            <Border StrokeThickness="0"
                    BackgroundColor="White"
                    Padding="30"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Shadow="{Shadow Brush=#80000000, Offset='0,4', Radius=15, Opacity=0.6}">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="18" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="15">
                    <ActivityIndicator IsRunning="{Binding IsTranscribing}"
                                       Color="{StaticResource Primary}"
                                       WidthRequest="40"
                                       HeightRequest="40"
                                       HorizontalOptions="Center" />
                    <Label Text="Transcribing..."
                           FontSize="16"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label Text="Please wait while we process the audio"
                           FontSize="12"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
        </Grid>
        <!-- Header -->
        <VerticalStackLayout Grid.Row="0"
                             Padding="20,10"
                             BackgroundColor="{StaticResource Primary}">
            <Label Text="My Recordings"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Start" />
            <Label Text="{Binding Recordings.Count, StringFormat='{0} recordings'}"
                   FontSize="14"
                   TextColor="White"
                   HorizontalOptions="Start" />
        </VerticalStackLayout>
        <!-- Search Bar -->
        <Border Grid.Row="1"
                Margin="10,10,10,5"
                StrokeThickness="1"
                Stroke="{StaticResource Primary}"
                BackgroundColor="White"
                Shadow="{Shadow Brush=#40000000, Offset='0,2', Radius=8, Opacity=0.3}">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="10" />
            </Border.StrokeShape>
            <Grid ColumnDefinitions="Auto,*,Auto"
                  Padding="10,5">
                <Image Grid.Column="0"
                       Source="search.svg"
                       WidthRequest="20"
                       HeightRequest="20"
                       VerticalOptions="Center"
                       Margin="5,0" />
                <Entry Grid.Column="1"
                       Text="{Binding SearchText}"
                       Placeholder="Search by title or transcription..."
                       FontSize="14"
                       VerticalOptions="Center"
                       BackgroundColor="Transparent" />
                <ImageButton Grid.Column="2"
                             Source="close.svg"
                             IsVisible="{Binding IsSearching}"
                             Command="{Binding ClearSearchCommand}"
                             Padding="5"
                             WidthRequest="30"
                             HeightRequest="30"
                             CornerRadius="15"
                             BackgroundColor="#E0E0E0"
                             Aspect="AspectFit"
                             VerticalOptions="Center" />
            </Grid>
        </Border>
        <!-- Recordings List -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Recordings}"
                        SelectionMode="None"
                        Margin="10,5">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="10">
                    <Image Source="{Binding IsSearching, Converter={StaticResource EmptyViewIconConverter}}"
                           WidthRequest="80"
                           HeightRequest="80"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding IsSearching, Converter={StaticResource EmptyViewTextConverter}}"
                           FontSize="18"
                           HorizontalOptions="Center" />
                    <Label Text="{Binding IsSearching, Converter={StaticResource EmptyViewSubtextConverter}}"
                           FontSize="14"
                           TextColor="Gray"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:AudioRecording">
                    <Frame Padding="15"
                           Margin="5,8"
                           BackgroundColor="White"
                           CornerRadius="12"
                           HasShadow="True">
                        <Grid ColumnDefinitions="*,Auto"
                              RowDefinitions="Auto,Auto,Auto,Auto,Auto"
                              ColumnSpacing="10"
                              RowSpacing="5">
                            <!-- Title with Edit Button -->
                            <HorizontalStackLayout Grid.Row="0"
                                                   Grid.Column="0"
                                                   Spacing="5">
                                <Label Text="{Binding Title}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center" />
                                <ImageButton Source="edit.svg"
                                             Padding="3"
                                             WidthRequest="25"
                                             HeightRequest="25"
                                             CornerRadius="5"
                                             BackgroundColor="Blue"
                                             Aspect="AspectFit"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=EditRecordingTitleCommand}"
                                             CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                            <!-- Date -->
                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding RecordedAt, StringFormat='{0:MMM dd, yyyy h:mm tt}'}"
                                   FontSize="12"
                                   TextColor="Gray" />
                            <!-- Duration -->
                            <Label Grid.Row="2"
                                   Grid.Column="0"
                                   Text="{Binding Duration, StringFormat='Duration: {0:mm\\:ss}'}"
                                   FontSize="12"
                                   TextColor="Gray" />
                            <!-- Transcription Status -->
                            <HorizontalStackLayout Grid.Row="3"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="2"
                                                   Spacing="5"
                                                   Margin="0,5,0,0">
                                <Label Text="{Binding IsTranscribed, Converter={StaticResource TranscriptionStatusConverter}}"
                                       FontSize="11"
                                       TextColor="{Binding IsTranscribed, Converter={StaticResource TranscriptionColorConverter}}"
                                       FontAttributes="Bold" />
                            </HorizontalStackLayout>
                            <!-- Transcription Preview with Edit Button -->
                            <HorizontalStackLayout Grid.Row="4"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="2"
                                                   Spacing="5"
                                                   Margin="0,5,0,0"
                                                   IsVisible="{Binding IsTranscribed}">
                                <Label Text="{Binding TranscriptionText}"
                                       FontSize="12"
                                       TextColor="DarkGray"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"
                                       VerticalOptions="Center"
                                       HorizontalOptions="FillAndExpand" />
                                <ImageButton Source="edit.svg"
                                             Padding="3"
                                             WidthRequest="25"
                                             HeightRequest="25"
                                             CornerRadius="5"
                                             BackgroundColor="Transparent"
                                             Aspect="AspectFit"
                                             VerticalOptions="Start"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=EditTranscriptionCommand}"
                                             CommandParameter="{Binding .}" />
                            </HorizontalStackLayout>
                            <!-- Action Buttons -->
                            <VerticalStackLayout Grid.Row="0"
                                                 Grid.RowSpan="3"
                                                 Grid.Column="1"
                                                 VerticalOptions="Center"
                                                 Spacing="10">
                                <!-- Play/Pause Button -->
                                <ImageButton Source="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=IsPlaying, Converter={StaticResource PlayPauseImageConverter}}"
                                             WidthRequest="35"
                                             HeightRequest="35"
                                             Aspect="AspectFit"
                                             BackgroundColor="Transparent"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=PlayRecordingCommand}"
                                             CommandParameter="{Binding .}">
                                    <ImageButton.Triggers>
                                        <DataTrigger TargetType="ImageButton"
                                                     Binding="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=CurrentlyPlayingId}"
                                                     Value="{Binding Id}">
                                            <DataTrigger.Setters>
                                                <Setter Property="Source"
                                                        Value="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=IsPlaying, Converter={StaticResource PlayPauseImageConverter}}" />
                                            </DataTrigger.Setters>
                                        </DataTrigger>
                                    </ImageButton.Triggers>
                                </ImageButton>
                                <!-- Transcribe Button -->
                                <ImageButton WidthRequest="35"
                                             HeightRequest="35"
                                             Aspect="AspectFit"
                                             BackgroundColor="Transparent"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=TranscribeRecordingCommand}"
                                             CommandParameter="{Binding .}">
                                    <ImageButton.Source>
                                        <MultiBinding Converter="{StaticResource TranscribeImageConverter}">
                                            <Binding Path="IsTranscribed" />
                                            <Binding Path="Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=CurrentlyTranscribingId" />
                                            <Binding Path="Id" />
                                        </MultiBinding>
                                    </ImageButton.Source>
                                    <ImageButton.Triggers>
                                        <DataTrigger TargetType="ImageButton"
                                                     Binding="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=CurrentlyTranscribingId}"
                                                     Value="{Binding Id}">
                                            <Setter Property="IsEnabled"
                                                    Value="False" />
                                            <Setter Property="Opacity"
                                                    Value="0.6" />
                                        </DataTrigger>
                                    </ImageButton.Triggers>
                                </ImageButton>
                                <!-- Delete Button -->
                                <ImageButton Source="delete.svg"
                                             WidthRequest="35"
                                             HeightRequest="35"
                                             Aspect="AspectFit"
                                             BackgroundColor="Transparent"
                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:RecordingsPageViewModel}}, Path=DeleteRecordingCommand}"
                                             CommandParameter="{Binding .}" />
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>