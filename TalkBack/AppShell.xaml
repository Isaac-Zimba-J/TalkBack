<?xml version="1.0" encoding="UTF-8"?>
<Shell x:Class="TalkBack.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:TalkBack.Views"
       Shell.BackgroundColor="#F8F9FA"
       FlyoutBehavior="Disabled"
       Title="TalkBack">
    <TabBar>
        <ShellContent Title="Record"
                      Icon="folder.png"
                      ContentTemplate="{DataTemplate views:MainPage}"
                      Route="MainPage" />
        <ShellContent Title="Recordings"
                      Icon="recordings.png"
                      ContentTemplate="{DataTemplate views:RecordingsPage}"
                      Route="RecordingsPage" />
        <ShellContent Title="Action Items"
                      Icon="checklist.png"
                      ContentTemplate="{DataTemplate views:ActionItemsPage}"
                      Route="ActionItemsPage" />
    </TabBar>
</Shell>